<Window x:Class="Kursovaya.Views.WarehouseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер склада - Автосалон" 
        Height="700" Width="1200" 
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource BackgroundGradient}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

 
        <Border Grid.Row="0" 
                Background="{StaticResource ButtonGradient}"
                Padding="20,15">
                <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <StackPanel Grid.Column="0">
                    <TextBlock Text="📦 МЕНЕДЖЕР СКЛАДА" 
                               FontSize="20" 
                               FontWeight="Bold" 
                               Foreground="White"/>
                    <TextBlock x:Name="WarehouseInfoText" 
                               Text="Склад" 
                               FontSize="13" 
                               Foreground="#E3F2FD"
                               Margin="0,3,0,0"/>
                </StackPanel>
                
                <Button Grid.Column="1" 
                        Content="Выход" 
                        Width="100" 
                        Height="35"
                        Click="Logout_Click"
                        Background="#FF5722"
                        HorizontalAlignment="Right">
                    <Button.Style>
                        <Style TargetType="Button" BasedOn="{StaticResource {x:Type Button}}">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#FF7043" Offset="0"/>
                                        <GradientStop Color="#FF5722" Offset="1"/>
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E64A19"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>


        <TabControl Grid.Row="1" Margin="15">
            <TabItem Header="✅ В наличии">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="White" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,10"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="🔄 Обновить" 
                                    Click="RefreshAvailable_Click" 
                                    Width="140" 
                                    Height="35"
                                    Margin="0,0,15,0"/>
                            <Border Background="#E8F5E9" 
                                    CornerRadius="5" 
                                    Padding="12,8"
                                    BorderBrush="#4CAF50"
                                    BorderThickness="1">
                                <TextBlock x:Name="AvailableCountText" 
                                           FontSize="15" 
                                           FontWeight="Bold"
                                           Foreground="#2E7D32">
                                    <Run Text="Автомобилей в наличии: "/>
                                    <Run Text="0" x:Name="AvailableCount"/>
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <DataGrid x:Name="AvailableVehiclesGrid" 
                              Grid.Row="1"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="VIN" 
                                                Binding="{Binding VIN}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Бренд" 
                                                Binding="{Binding Brand}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Модель" 
                                                Binding="{Binding Model}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Год" 
                                                Binding="{Binding Year}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Цвет" 
                                                Binding="{Binding Color}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Пробег" 
                                                Binding="{Binding Mileage}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Цена" 
                                                Binding="{Binding Price, StringFormat={}{0:N0} ₽}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="КПП" 
                                                Binding="{Binding Transmission}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Топливо" 
                                                Binding="{Binding Fuel}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Объем" 
                                                Binding="{Binding EngineVolume, StringFormat={}{0:F1} л}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Создан" 
                                                Binding="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy HH:mm}}" 
                                                Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="🔒 Резервы">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="White" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,10"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <StackPanel Orientation="Horizontal">
                            <Button Content="🔄 Обновить" 
                                    Click="RefreshReserved_Click" 
                                    Width="140" 
                                    Height="35"
                                    Margin="0,0,15,0"/>
                            <Border Background="#F3E5F5" 
                                    CornerRadius="5" 
                                    Padding="12,8"
                                    BorderBrush="#9C27B0"
                                    BorderThickness="1">
                                <TextBlock x:Name="ReservedCountText" 
                                           FontSize="15" 
                                           FontWeight="Bold"
                                           Foreground="#7B1FA2">
                                    <Run Text="Автомобилей в резерве: "/>
                                    <Run Text="0" x:Name="ReservedCount"/>
                                </TextBlock>
                            </Border>
                        </StackPanel>
                    </Border>

                    <DataGrid x:Name="ReservedVehiclesGrid" 
                              Grid.Row="1"
                              AutoGenerateColumns="False" 
                              IsReadOnly="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="VIN" 
                                                Binding="{Binding VIN}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Бренд" 
                                                Binding="{Binding Brand}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Модель" 
                                                Binding="{Binding Model}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Год" 
                                                Binding="{Binding Year}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Цвет" 
                                                Binding="{Binding Color}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Пробег" 
                                                Binding="{Binding Mileage}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Цена" 
                                                Binding="{Binding Price, StringFormat={}{0:N0} ₽}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Владелец" 
                                                Binding="{Binding Clients.FullName}" 
                                                Width="2*"/>
                            <DataGridTextColumn Header="Создан" 
                                                Binding="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy HH:mm}}" 
                                                Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <TabItem Header="📥 Поставки">
                <Grid Margin="10">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" 
                            Background="White" 
                            CornerRadius="5" 
                            Padding="15" 
                            Margin="0,0,0,10"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1">
                        <StackPanel>
                            <TextBlock Text="Добавление новых автомобилей" 
                                       FontSize="16" 
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource PrimaryColor}"
                                       Margin="0,0,0,12"/>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="➕ Добавить автомобиль" 
                                        Click="AddVehicle_Click" 
                                        Width="180" 
                                        Height="35"
                                        Margin="0,0,8,0"/>
                                <Button Content="💾 Сохранить" 
                                        Click="SaveVehicles_Click" 
                                        Width="130" 
                                        Height="35"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <DataGrid x:Name="NewVehiclesGrid" 
                              Grid.Row="1"
                              AutoGenerateColumns="False" 
                              IsReadOnly="False" 
                              CanUserAddRows="True"
                              SelectionMode="Single">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="VIN" 
                                                Binding="{Binding VIN, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Бренд" 
                                                Binding="{Binding Brand, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Модель" 
                                                Binding="{Binding Model, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Год" 
                                                Binding="{Binding Year, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Цвет" 
                                                Binding="{Binding Color, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Пробег" 
                                                Binding="{Binding Mileage, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Цена" 
                                                Binding="{Binding Price, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="КПП" 
                                                Binding="{Binding Transmission, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Топливо" 
                                                Binding="{Binding Fuel, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Объем" 
                                                Binding="{Binding EngineVolume, UpdateSourceTrigger=PropertyChanged}" 
                                                Width="*"/>
                            <DataGridTextColumn Header="Создан" 
                                                Binding="{Binding CreatedAt, StringFormat={}{0:dd.MM.yyyy HH:mm}}" 
                                                IsReadOnly="True" 
                                                Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
